{
    "Serilog": {
        "Using": [
            "Serilog.Enrichers.Environment",
            "Serilog.Sinks.Console"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Information",
                "Microsoft.Hosting.Lifetime": "Information",
                "Microsoft.EntityFrameworkCore": "Information",
                "System": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Console"
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithThreadId"
        ]
    },
    "Database": {
        "ConnectionString": "Data Source=lc.db;"
    },
    "Cors": {
        "AllowedOrigin": "http://web"
    }
}
